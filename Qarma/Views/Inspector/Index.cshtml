@model IEnumerable<Qarma.Models.InspectorMetric>
@{ Layout = null; }

<script src="https://cdn.tailwindcss.com"></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<style>
    /* Thanh cuộn nhỏ gọn */
    .custom-scroll::-webkit-scrollbar {
        width: 6px;
        height: 6px;
    }

    .custom-scroll::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    .custom-scroll::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 4px;
    }

        .custom-scroll::-webkit-scrollbar-thumb:hover {
            background: #a8a8a8;
        }

    /* Font bảng siêu nhỏ gọn */
    .table-compact th, .table-compact td {
        font-size: 0.7rem;
        padding: 0.25rem 0.5rem;
    }
</style>

<div class="p-4 text-slate-800 font-sans text-sm bg-gray-50 min-h-screen">

    <div class="mb-4">
        <h1 class="text-3xl font-bold text-[#0f5132]">Inspector Overview</h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-2 items-end">

        <div class="flex flex-col gap-2">
            <div class="w-full h-[46px] hidden md:block"></div>

            <div class="bg-white p-2 rounded shadow border-t-4 border-[#198754]">
                <h3 class="font-bold text-xs bg-gray-200 p-1 mb-1">Inspector - Inspections</h3>
                <div class="overflow-x-auto custom-scroll">
                    <div id="inspections_chart" style="height: 200px;"></div>
                </div>
            </div>
        </div>

        <div class="flex flex-col gap-2">

            <div class="flex flex-col items-start justify-start w-full h-[46px] pb-1">
                <div class="flex space-x-2 bg-white px-2 py-0.5 rounded border border-gray-200 text-[10px] font-medium mb-1 shadow-sm">
                    <span>01/01/2023</span><span>-</span><span>26/09/2024</span>
                </div>

                <div class="flex items-center gap-4 w-1/2 justify-end">
                    <div class="flex items-center flex-1 h-4 relative">
                        <div class="w-full h-0.5 bg-gray-400 rounded"></div>
                        <div class="absolute left-0 w-3 h-3 bg-white border-2 border-gray-600 rounded-full cursor-pointer z-10"></div>
                        <div class="absolute right-0 w-3 h-3 bg-white border-2 border-gray-600 rounded-full cursor-pointer z-10"></div>
                    </div>
                </div>
            </div>

            <div class="bg-white p-2 rounded shadow border-t-4 border-[#198754]">
                <h3 class="font-bold text-xs bg-gray-200 p-1 mb-1">Inspector - Defects</h3>
                <div class="overflow-x-auto custom-scroll">
                    <div id="defects_chart" style="height: 200px;"></div>
                </div>
            </div>
        </div>

    </div>

    <div class="bg-white rounded shadow border border-gray-200 mt-2">
        <div class="bg-[#198754] text-white px-3 py-1 font-bold text-sm">
            Inspector Overview Detail
        </div>
        <div class="overflow-y-auto max-h-[300px] custom-scroll">
            <table class="w-full text-left table-compact">
                <thead class="bg-[#198754] text-white uppercase font-semibold sticky top-0 z-20 shadow-sm">
                    <tr>
                        <th class="px-3 bg-[#198754] w-48">Inspector Name<br>+ Email</th>
                        <th class="text-center bg-[#198754]">Minor</th>
                        <th class="text-center bg-[#198754]">Major</th>
                        <th class="text-center bg-[#198754]">Critical</th>
                        <th class="text-center bg-[#198754]">Sum<br>defects</th>
                        <th class="text-center bg-[#198754]">Defect<br>rate</th>
                        <th class="text-right bg-[#198754]">Sample<br>qty</th>
                        <th class="text-center bg-[#198754]">Inspec.</th>
                        <th class="text-center bg-[#198754]">Reject<br>rate</th>
                        <th class="text-center bg-[#198754]">Re<br>insp.</th>
                        <th class="text-center bg-[#198754]">Concl.<br>Agree.</th>
                        <th class="text-center bg-[#198754]">Location<br>rate</th>
                        <th class="text-right px-3 bg-[#198754]">Avg<br>Duration (h)</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-gray-50">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-100 transition-colors">
                            <td class="px-3 align-top">
                                <div class="font-bold text-gray-800 text-xs break-words">@item.Name</div>
                                <div class="text-[9px] text-gray-500 break-all">@item.Email</div>
                            </td>
                            <td class="text-center align-middle">@item.Minor</td>
                            <td class="text-center align-middle">@item.Major</td>
                            <td class="text-center align-middle">@item.Critical</td>
                            <td class="text-center font-bold text-gray-900 align-middle">@item.SumDefects</td>

                            <td class="text-center align-middle">
                                <div class="flex items-center justify-center space-x-1">
                                    @if (item.DefectRate > 3.5)
                                    {<span class="h-2 w-2 rounded-full bg-red-500 shadow-sm animate-pulse flex-shrink-0"></span>}
                                    <span>@item.DefectRate%</span>
                                </div>
                            </td>

                            <td class="text-right align-middle">@item.SampleQuantity.ToString("N0")</td>
                            <td class="text-center align-middle">@item.Inspections</td>

                            <td class="text-center align-middle">
                                <div class="flex items-center justify-center space-x-1">
                                    @if (item.RejectionRate > 15)
                                    {<span class="h-2 w-2 rounded-full bg-red-500 shadow-sm flex-shrink-0"></span>}
                                    <span>@item.RejectionRate%</span>
                                </div>
                            </td>

                            <td class="text-center align-middle">@item.ReInspections</td>
                            <td class="text-center align-middle">@item.ConclusionAgreementRate%</td>
                            <td class="text-center align-middle">@item.LocationRate%</td>
                            <td class="text-right px-3 align-middle">@item.AvgDuration.ToString("N2")</td>
                        </tr>
                    }
                    <tr class="bg-[#198754] text-white font-bold sticky bottom-0 z-20 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.1)]">
                        <td class="px-3 bg-[#198754]">Total</td>
                        <td class="text-center bg-[#198754]">@Model.Sum(x => x.Minor)</td>
                        <td class="text-center bg-[#198754]">@Model.Sum(x => x.Major)</td>
                        <td class="text-center bg-[#198754]">@Model.Sum(x => x.Critical)</td>
                        <td class="text-center bg-[#198754]">@Model.Sum(x => x.SumDefects)</td>
                        <td class="text-center bg-[#198754]">1.39%</td>
                        <td class="text-right bg-[#198754]">@Model.Sum(x => x.SampleQuantity).ToString("N0")</td>
                        <td class="text-center bg-[#198754]">@Model.Sum(x => x.Inspections)</td>
                        <td class="text-center bg-[#198754]">16.09%</td>
                        <td class="text-center bg-[#198754]">@Model.Sum(x => x.ReInspections)</td>
                        <td class="text-center bg-[#198754]">65.52%</td>
                        <td class="text-center bg-[#198754]">88.51%</td>
                        <td class="text-right px-3 bg-[#198754]">65.10</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    google.charts.load('current', {packages: ['corechart', 'bar']});
    google.charts.setOnLoadCallback(drawCharts);

    function drawCharts() {
        var rawData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
        var minChartWidth = rawData.length > 15 ? (rawData.length * 35) + 'px' : '100%';

        document.getElementById('inspections_chart').style.width = minChartWidth;
        document.getElementById('defects_chart').style.width = minChartWidth;

        var commonOptions = {
            legend: { position: "none" },
            chartArea: { width: '85%', height: '75%', left: 40 },
            vAxis: { minValue: 0, textStyle: { fontSize: 9 } },
            hAxis: { textStyle: { fontSize: 9, color: '#666' } },
            bar: { groupWidth: "75%" }
        };

        // Chart 1: Inspections
        var inspData = [['Inspector', 'Inspections', { role: 'style' }]];
        rawData.forEach(item => inspData.push([item.Name, item.Inspections, '#198754']));
        var options1 = JSON.parse(JSON.stringify(commonOptions));
        options1.vAxis.title = '';
        var chart1 = new google.visualization.ColumnChart(document.getElementById('inspections_chart'));
        chart1.draw(google.visualization.arrayToDataTable(inspData), options1);

        // Chart 2: Defects
        var defectData = [['Inspector', 'Sum defects', { role: 'style' }]];
        rawData.forEach(item => defectData.push([item.Name, item.SumDefects, '#198754']));
        var options2 = JSON.parse(JSON.stringify(commonOptions));
        options2.vAxis.title = '';
        var chart2 = new google.visualization.ColumnChart(document.getElementById('defects_chart'));
        chart2.draw(google.visualization.arrayToDataTable(defectData), options2);
    }
</script>