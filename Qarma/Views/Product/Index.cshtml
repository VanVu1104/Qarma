@model IEnumerable<Qarma.Models.ProductMetric>

<script src="https://cdn.tailwindcss.com"></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<style>
    /* Thanh cuộn nhỏ gọn */
    .custom-scroll::-webkit-scrollbar {
        width: 6px;
        height: 6px;
    }

    .custom-scroll::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    .custom-scroll::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 4px;
    }

        .custom-scroll::-webkit-scrollbar-thumb:hover {
            background: #a8a8a8;
        }

    /* Font bảng siêu nhỏ gọn */
    .table-compact th, .table-compact td {
        font-size: 0.7rem; /* 11px */
        padding: 0.25rem 0.5rem; /* Padding nhỏ */
    }
</style>

<div class="p-4 text-slate-800 font-sans text-sm bg-gray-50 min-h-screen">

    <div class="mb-4">
        <h1 class="text-3xl font-bold text-[#0f5132]">Product Overview</h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-2 items-end">

        <div class="flex flex-col gap-2">
            <div class="w-1/2">
                <input type="text" placeholder="Select a product to see details"
                       class="w-full bg-gray-200 text-gray-600 rounded-full px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-[#198754] shadow-[inset_0_2px_4px_rgba(0,0,0,0.1)] cursor-pointer text-center"
                       readonly>
            </div>

            <div class="bg-white p-2 rounded shadow border-t-4 border-[#198754]">
                <h3 class="font-bold text-xs bg-gray-200 p-1 mb-1">Product - Inspections</h3>
                <div class="overflow-x-auto custom-scroll">
                    <div id="inspection_chart" style="height: 200px;"></div>
                </div>
            </div>
        </div>

        <div class="flex flex-col">
            <form method="get" action="@Url.Action("Index")" class="flex flex-col items-end justify-start w-full h-[36px] pb-1">
                <div class="flex items-center space-x-2 w-full justify-start">

                    <div class="relative">
                        <span class="absolute left-2 top-1/2 transform -translate-y-1/2 text-[10px] text-gray-500 font-bold">Fr:</span>
                        <input type="date" name="fromDate" value="@ViewBag.FromDateInput"
                               class="pl-6 pr-1 py-1 bg-white border border-gray-300 text-gray-700 text-[11px] rounded shadow-sm focus:outline-none focus:ring-1 focus:ring-[#198754] focus:border-[#198754] h-[28px]" />
                    </div>

                    <span class="text-gray-400 text-xs">-</span>

                    <div class="relative">
                        <span class="absolute left-2 top-1/2 transform -translate-y-1/2 text-[10px] text-gray-500 font-bold">To:</span>
                        <input type="date" name="toDate" value="@ViewBag.ToDateInput"
                               class="pl-6 pr-1 py-1 bg-white border border-gray-300 text-gray-700 text-[11px] rounded shadow-sm focus:outline-none focus:ring-1 focus:ring-[#198754] focus:border-[#198754] h-[28px]" />
                    </div>

                    <button type="submit"
                            class="bg-[#198754] hover:bg-[#146c43] text-white p-1.5 rounded shadow-sm transition-colors h-[28px] w-[28px] flex items-center justify-center"
                            title="Lọc dữ liệu">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-3.5 h-3.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
                        </svg>
                    </button>

                    <a href="@Url.Action("Index")"
                       class="bg-gray-200 hover:bg-gray-300 text-gray-600 p-1.5 rounded shadow-sm transition-colors h-[28px] w-[28px] flex items-center justify-center"
                       title="Tháng hiện tại">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-3.5 h-3.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
                        </svg>
                    </a>

                </div>
            </form>

            <div class="bg-white p-2 rounded shadow border-t-4 border-[#198754]">
                <h3 class="font-bold text-xs bg-gray-200 p-1 mb-1">Product - Defects</h3>
                <div class="overflow-x-auto custom-scroll">
                    <div id="defect_chart" style="height: 200px;"></div>
                </div>
            </div>
        </div>

    </div>

    <div class="bg-white rounded shadow border border-gray-200">
        <div class="bg-[#198754] text-white px-3 py-1 font-bold text-sm">
            Product Overview Detail
        </div>

        <div class="overflow-y-auto max-h-[300px] custom-scroll">
            <table class="w-full text-left table-compact">
                <thead class="bg-[#198754] text-white uppercase font-semibold sticky top-0 z-20 shadow-sm">
                    <tr>
                        <th class="bg-[#198754] w-48">Item code</th>
                        <th class="text-center bg-[#198754]">Minor</th>
                        <th class="text-center bg-[#198754]">Major</th>
                        <th class="text-center bg-[#198754]">Critical</th>
                        <th class="text-center bg-[#198754]">Defect<br>Sum</th>
                        <th class="text-center bg-[#198754]">Defect<br>Rate</th>

                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-gray-50">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-100 transition-colors">
                                <td class="align-top">
                                    <div class="font-bold text-[#198754]">@item.ItemNumber</div>
                                </td>
                                <td class="text-center align-middle">@item.Minor</td>
                                <td class="text-center align-middle">@item.Major</td>
                                <td class="text-center align-middle">@item.Critical</td>
                                <td class="text-center font-bold text-gray-900 align-middle">@item.DefectSum</td>

                                <td class="text-center align-middle">
                                    <div class="flex items-center justify-center space-x-1">
                                        @if (item.DefectRate > 2.0m)
                                        {
                                            <span class="h-2 w-2 rounded-full bg-red-500 shadow-sm animate-pulse flex-shrink-0"></span>
                                        }
                                        <span>@item.DefectRate.ToString("0.00")%</span>
                                    </div>
                                </td>
                            </tr>
                        }
                        <tr class="bg-[#198754] text-white font-bold sticky bottom-0 z-20 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.1)]">
                            <td class="bg-[#198754]">Total</td>
                            <td class="text-center bg-[#198754]">@Model.Sum(x => x.Minor)</td>
                            <td class="text-center bg-[#198754]">@Model.Sum(x => x.Major)</td>
                            <td class="text-center bg-[#198754]">@Model.Sum(x => x.Critical)</td>
                            <td class="text-center bg-[#198754]">@Model.Sum(x => x.DefectSum)</td>
                            <td class="text-center bg-[#198754]">
                                @Math.Round(Model.Average(x => x.DefectRate), 2)%
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-gray-500">
                                Không có dữ liệu trong khoảng thời gian đã chọn
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    google.charts.load('current', {packages: ['corechart', 'bar']});
    google.charts.setOnLoadCallback(drawCharts);

    function drawCharts() {
        var rawData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));

        if (!rawData || rawData.length === 0) {
            document.getElementById('inspection_chart').innerHTML = '<div style="display:flex;align-items:center;justify-content:center;height:100%;color:#999;">Không có dữ liệu</div>';
            document.getElementById('defect_chart').innerHTML = '<div style="display:flex;align-items:center;justify-content:center;height:100%;color:#999;">Không có dữ liệu</div>';
            return;
        }

        // Logic tự dãn chiều rộng nếu nhiều dữ liệu (>15 cột)
        var minChartWidth = rawData.length > 15 ? (rawData.length * 35) + 'px' : '100%';

        document.getElementById('inspection_chart').style.width = minChartWidth;
        document.getElementById('defect_chart').style.width = minChartWidth;

        var commonOptions = {
            legend: { position: "none" },
            chartArea: { width: '90%', height: '75%', left: 30 },
            vAxis: {
                gridlines: { count: 3 },
                textStyle: { fontSize: 9 }
            },
            hAxis: {
                textStyle: { fontSize: 9, color: '#666' }
            },
            bar: { groupWidth: "75%" }
        };

        // Vẽ Chart 1 - Inspections
        var inspectionData = [['Item', 'Inspections', { role: 'style' }]];
        rawData.forEach(item => inspectionData.push([item.ItemNumber, item.InspectSum, '#198754']));

        var options1 = JSON.parse(JSON.stringify(commonOptions));
        options1.vAxis.title = '';

        var chart1 = new google.visualization.ColumnChart(document.getElementById('inspection_chart'));
        chart1.draw(google.visualization.arrayToDataTable(inspectionData), options1);

        // Vẽ Chart 2 - Defects
        var defectData = [['Item', 'Sum Defects', { role: 'style' }]];
        rawData.forEach(item => defectData.push([item.ItemNumber, item.DefectSum, '#198754']));

        var options2 = JSON.parse(JSON.stringify(commonOptions));
        options2.vAxis.title = '';

        var chart2 = new google.visualization.ColumnChart(document.getElementById('defect_chart'));
        chart2.draw(google.visualization.arrayToDataTable(defectData), options2);
    }
</script>